doctype html
html
    head
        title #{play.title}
        link(href="/css/about-play.css" rel="stylesheet")
        include ./head.pug
    body
        nav(class="navbar navbar-expand-lg navbar-light bg-light fixed-top")
            a.navbar-brand(href="/")
                img(src="/images/logo-nav.png" width="110" alt="Logo image")
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon

            div(class="collapse navbar-collapse" id="navbarSupportedContent")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item active")
                        a.nav-link(href="/agenda") Agenda
                    li.nav-item
                        a.nav-link(href="/international") For Internationals
                    li.nav-item
                        a.nav-link(href="/") Workshops
        main.container
            div.row
                header
                    a(class="play-url" href=`${play.play_url}`)
                        h3.play-title #{play.title}
                article.col-md-12
                    div(class="row play-information")
                        div.play-details
                            img(src="https://www.brakkegrond.nl/files/styles/agenda_overview/public/theater_2016/jan_decorte_standdowncdannywillems-01dw-176230-2.jpg?itok=p0pPY8OH" class="img-fluid image-current" alt="Play's image")
                            p.plot #{play.description}
                            a.theater(title="Theater's website" href=`${play.theater_url}`) #{play.name} 
                            p.play-date #{play.play_date.toDateString()}
            include ./email-alert.pug
        include ./footer.pug

        
